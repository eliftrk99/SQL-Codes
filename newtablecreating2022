SELECT * FROM EMPLOYEETABLE;
SELECT * FROM PAYMENTSTABLE;

SELECT CostumerID, SUM(Value$) AS "Total Amount" 
FROM PAYMENTSTABLE GROUP BY CostumerID

SELECT EMPLOYEETABLE.FirstName, EMPLOYEETABLE.LastName, 
SUM(Value$) AS "Total Amount" 
FROM PAYMENTSTABLE, EMPLOYEETABLE 
WHERE EMPLOYEETABLE.EmployeeId = PAYMENTSTABLE.EmployeeId 
Group by EMPLOYEETABLE.EmployeeID

SELECT * FROM EMPLOYEETABLE WHERE FirstName LIKE 'J%'
