CREATE TABLE EMPLOYEETABLE(
	EmployeeID INT NOT NULL PRIMARY KEY,
	FirstName VARCHAR(20) NOT NULL,
	LastName VARCHAR(20) NOT NULL,
	City VARCHAR(20),
	State VARCHAR(20) NOT NULL);

